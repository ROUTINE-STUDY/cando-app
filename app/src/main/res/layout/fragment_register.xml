<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentcontainerview_register_header"
            android:name="com.goodee.cando_app.views.HeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_header" />
        <!--아이디 입력창-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_register_idform"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/fragmentcontainerview_register_header">
            <TextView
                android:id="@+id/textview_register_idpointer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/register_pointer"
                android:text="@string/register_idpointer" />
            <EditText
                android:id="@+id/edittext_register_idinput"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                style="@style/register_input"
                android:inputType="textWebEditText"
                android:textSize="18sp"
                android:hint="@string/register_idhint"
                android:autofillHints="username"/>
            <Button
                android:id="@+id/button_register_duplicatecheck"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="중복확인"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--비밀번호 입력창-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_register_passwordform"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_register_idform">
            <TextView
                android:id="@+id/textview_register_passwordpointer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/register_pointer"
                android:text="@string/register_passwordpointer"/>
            <EditText
                android:id="@+id/edittext_register_passwordinput"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="match_parent"
                style="@style/register_input"
                android:inputType="textWebEditText"
                android:hint="@string/register_passwordhint"
                android:autofillHints="password" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--비밀번호 확인 입력창-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_register_passwordcheckform"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_register_passwordform">
            <TextView
                android:id="@+id/textview_register_passwordcheckpointer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/register_pointer"
                android:textSize="18sp"
                android:text="@string/register_passwordcheck"/>
            <EditText
                android:id="@+id/edittext_register_passwordcheckinput"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="match_parent"
                android:inputType="textWebEditText"
                android:hint="@string/register_passwordcheckinput"
                style="@style/register_input"
                android:autofillHints="username" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--이름 입력창-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_register_nameform"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_register_passwordcheckform">
            <TextView
                android:id="@+id/textview_register_namepointer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/register_pointer"
                android:text="@string/register_pointer"/>
            <EditText
                android:id="@+id/edittext_register_nameinput"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="match_parent"
                android:inputType="textWebEditText"
                style="@style/register_input"
                android:hint="@string/register_nameinput"
                android:autofillHints="username" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--이메일 입력창-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_register_emailform"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_register_nameform">
            <TextView
                android:id="@+id/textview_register_emailpointer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/register_pointer"
                android:text="이메일"/>
            <EditText
                android:id="@+id/edittext_register_emailinput"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                style="@style/register_input"
                android:hint="@string/register_emailinput"
                android:autofillHints="emailAddress" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <Button
            android:id="@+id/button_register_registerbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_register_emailform"
            android:text="회원가입"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
