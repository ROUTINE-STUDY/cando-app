<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background">
        <!-- 메인 로그인 화면에 공통으로 들어갈 헤더 -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_header"
            android:name="com.goodee.cando_app.views.HeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_header" />
        <LinearLayout
            android:id="@+id/id_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/main_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/idPointer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/idInput"
                android:text="아이디"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/idInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_header"></TextView>

            <EditText
                android:id="@+id/idInput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:inputType="textWebEditText"
                android:minHeight="48dp"
                android:textSize="30sp"
                app:layout_constraintHorizontal_weight=".70"
                app:layout_constraintStart_toEndOf="@+id/idPointer"
                app:layout_constraintTop_toBottomOf="@+id/main_header" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/id_form"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/passwordInput"
                android:text="비밀번호"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idPointer" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/passwordLabel"
                app:layout_constraintStart_toEndOf="@+id/passwordLabel" />
        </LinearLayout>


        <Button
            android:id="@+id/login_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            style="@style/main_button"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_form" />

        <Button
            android:id="@+id/find_member_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="아이디찾기/비밀번호찾기"
            style="@style/main_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_button" />

        <Button
            android:id="@+id/button3"
            style="@style/main_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_member_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>